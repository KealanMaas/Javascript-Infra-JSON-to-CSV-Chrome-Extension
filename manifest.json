
{
    "manifest_version": 2,
    "name": "Convert JSON to CSV",
    "version": "0.0",
  
    "background": {
      "persistent": false,
      "scripts": ["background.js"]
    },
    "content_scripts": [{
      "matches": ["*://*.datadoghq.com/*"],
      "js": ["content.js"]
    }],
    "browser_action": {
      "default_icon": "logo.png",
      "default_title": "Json to CSV",
      "default_popup": "popup.html"

    },
    "permissions": ["activeTab","<all_urls>","downloads","background"]
  }